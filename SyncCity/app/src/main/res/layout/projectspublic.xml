    <!-- Rectangle 1 -->
    <View
        android:id="@+id/rectangle1"
        android:layout_width="413dp"
        android:layout_height="130dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle_background"
        app:layout_constraintTop_toBottomOf="@id/textStage4"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Comment Input Box with Rounded Corners -->
    <EditText
        android:id="@+id/comment_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_input_box"
        android:padding="10dp"
        android:textColorHint="#FFFFFF"
        android:hint="Comment Here"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/rectangle1"
        app:layout_constraintStart_toStartOf="@id/rectangle1"
        app:layout_constraintEnd_toEndOf="@id/rectangle1"
        app:layout_constraintBottom_toTopOf="@id/button_row" />

    <!-- Button Row for "Comment" and "Reply" -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="@id/rectangle1"
        app:layout_constraintStart_toStartOf="@id/rectangle1"
        app:layout_constraintTop_toBottomOf="@id/comment_input">

        <!-- Comment Button -->
        <Button
            android:id="@+id/comment_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#9D7750"
            android:text="Comment"
            android:textColor="#FFFFFF" />

        <!-- Reply Button -->
        <Button
            android:id="@+id/reply_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#9D7750"
            android:text="Reply"
            android:textColor="#FFFFFF" />
    </LinearLayout>

