<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D7750">

    <!-- Heading TextView -->

    <!-- Circular Image -->
    <TextView
        android:id="@+id/project_name_heading"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:text="Road Widening and Drainage Modification Project (Ongoing)"
        android:textColor="#F8E9C8"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="5dp" />



    <!-- Rectangle Box -->

    <!-- Circular Image -->

    <ImageView
        android:id="@+id/ellipse_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/circular_image_background"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="80dp" />

    <!-- Name TextView -->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:fontFamily="sans-serif"
        android:text="Harish Mahto"
        android:textColor="#F8E9C8"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="79dp" />

    <!-- Department TextView -->
    <TextView
        android:id="@+id/department_text"
        android:layout_width="145dp"
        android:layout_height="15dp"
        android:fontFamily="sans-serif"
        android:text="Public Works Department"
        android:textColor="#F8E9C8"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="57dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="99dp" />

    <!-- Publication Date TextView -->
    <TextView
        android:id="@+id/publication_date_text"
        android:layout_width="97dp"
        android:layout_height="12dp"
        android:fontFamily="serif"
        android:text="published on 1st August, 2024"
        android:textColor="#FFFFFF"
        android:textSize="7sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="114dp" />




    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:alpha="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/project_description"
        android:textColor="#4D4A43"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="150dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/budget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="sans-serif"
        android:paddingBottom="4dp"
        android:text="Budget Assigned: 5 lakhs"
        android:textStyle="bold"
        android:textColor="#4D4A43"
        android:textSize="11sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/resources_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="sans-serif"
        android:paddingTop="4dp"
        android:text="Resources: resource file here"
        android:textStyle="bold"
        android:textColor="#4D4A43"
        android:textSize="11sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="356dp" />


