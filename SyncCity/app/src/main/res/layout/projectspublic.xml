    <TextView
        android:id="@+id/textStage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="3rd August, Project starts"
        android:textColor="#F8E9C8"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="411dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textStage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="7th August, First stage completed"
        android:textColor="#F8E9C8"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="467dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textStage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="9th August, Second Stage to be Completed"
        android:textColor="#F8E9C8"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="524dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textStage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="25th August, Expected Completion of the project"
        android:textColor="#F8E9C8"
        android:textSize="10sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="582dp" />
