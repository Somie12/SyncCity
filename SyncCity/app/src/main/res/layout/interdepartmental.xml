<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D7750">

    <!-- Rectangle Box -->
    <View
        android:id="@+id/rectangleBox"
        android:layout_width="0dp"
        android:layout_height="186dp"
        android:background="#CEB591"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379" />

    <!-- ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="214dp"
        android:layout_height="255dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:src="@drawable/ic_manimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Text: "My Inter-departmental" -->
    <TextView
        android:id="@+id/textDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/department_inter"
        android:textColor="#F8E9C8"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="216dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="54dp" />

    <!-- Text: "836 Members, 263 Projects" -->
    <TextView
        android:id="@+id/textMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/members_inter"
        android:textColor="#F8E9C8"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/textDepartment"
        app:layout_constraintTop_toBottomOf="@+id/textDepartment" />

    <!-- Description Heading -->
    <TextView
        android:id="@+id/textDescriptionHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Description"
        android:textColor="#4D4A43"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rectangleBox"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="229dp" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/textDescription"
        android:layout_width="369dp"
        android:layout_height="119dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/description_text_inter"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="255dp"
        tools:ignore="MissingConstraints" />

