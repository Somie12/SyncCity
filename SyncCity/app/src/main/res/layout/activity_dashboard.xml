<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5CD9F">

    <!-- "My Department" TextView -->
    <TextView
        android:id="@+id/myDepartmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PWD Department"
        android:textColor="#4D4A43"
        android:layout_marginTop="50dp"
        android:layout_marginStart="31dp"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:alpha="1"
        android:textAlignment="viewStart" />

    <!-- "Welcome to SyncCity App" TextView -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to SyncCity App"
        android:textColor="#4D4A43"
        android:layout_marginTop="85dp"
        android:layout_marginStart="32dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:alpha="1"
        android:textAlignment="viewStart" />

    <!-- Rounded rectangle element aligned to the top-right corner -->
    <FrameLayout
        android:id="@+id/rounded_rectangle"
        android:layout_width="120dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/rounded_rectangle_background" />

    <!-- White circle on top of the rectangle -->
    <View
        android:id="@+id/profile_pic"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_profile" />

    <!-- Center Rectangle -->
    <FrameLayout
        android:id="@+id/center_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/center_rectangle_background"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <!-- Container for Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- First Row -->
            <Button
                android:id="@+id/btn_project_links"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background"
                android:text="Project Links"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:elevation="4dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_project_database"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_background"
                    android:text="Project Database"
                    android:elevation="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_task_scheduling"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_background"
                    android:text="Task Scheduling"
                    android:elevation="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- Third Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_resource_inventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_background"
                    android:text="Resource Inventory"
                    android:textColor="@color/white"
                    android:elevation="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_unified_project_phasing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="Unified Project Phasing"
                    android:textAlignment="center"
                    android:elevation="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fourth Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_discussion_forum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_background"
                    android:text="Discussion Forum"
                    android:elevation="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_training_workshops"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_background"
                    android:text="Training Workshops"
                    android:textColor="@color/white"
                    android:elevation="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <!-- Box at the bottom of the screen with no spacing and rounded top corners -->
    <View
        android:id="@+id/bottom_box"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_box"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />


    <!-- Scrollable area at the bottom with cards -->
    <HorizontalScrollView
        android:id="@+id/scrollable_area"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:fillViewport="true"
        android:layout_above="@id/bottom_box">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Card 1 -->
            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="115dp"
                android:background="@drawable/card_background"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/department1_logo"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department 1"
                    android:textColor="#4D4A43"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="115dp"
                android:background="@drawable/card_background"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/department2_logo"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department 2"
                    android:textColor="#4D4A43"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>


            <!-- Card 3 -->
            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="115dp"
                android:background="@drawable/card_background"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/department3_logo"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department 3"
                    android:textColor="#4D4A43"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Card 4 -->
            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="115dp"
                android:background="@drawable/card_background"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/department4_logo"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department 4"
                    android:textColor="#4D4A43"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>


            <!-- Card 5 -->
            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="115dp"
                android:background="@drawable/card_background"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/department5_logo"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department 5"
                    android:textColor="#4D4A43"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>




        </LinearLayout>
    </HorizontalScrollView>



</RelativeLayout>
